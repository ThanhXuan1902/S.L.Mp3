<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:background="#1E000000"
        android:layout_width="match_parent"
        android:layout_height="250dp"/>

    <ImageView
        android:id="@+id/imgView_background_dong_quang_cao"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="250dp"/>


    <RelativeLayout
        android:layout_alignBottom="@id/imgView_background_dong_quang_cao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_img_quang_cao"
            app:cardCornerRadius="10dp"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_quang_cao"
                android:background="@color/teal_200"
                android:layout_width="100dp"
                android:layout_height="100dp" />
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/txt_ten_bai_hat_quang_cao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/cardview_img_quang_cao"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="21dp"
            android:layout_toRightOf="@id/cardview_img_quang_cao"
            android:fontFamily="sans-serif"
            android:padding="5dp"
            android:shadowRadius="@android:integer/config_longAnimTime"
            android:text="Tên bài hát"
            android:textColor="@color/white"
            android:textColorHighlight="#E57373"
            android:textSize="18sp"
            android:textStyle="italic|bold" />

        <RelativeLayout
            android:layout_toRightOf="@id/cardview_img_quang_cao"
            android:layout_marginTop="7dp"
            android:id="@+id/imgView_QuangCao"
            android:layout_below="@id/txt_ten_bai_hat_quang_cao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_noi_dung"
                android:ellipsize="end"
                android:text="chào mừng bạn đến với ca sĩ hot nhất"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginRight="40dp"
                android:textColorHighlight="#E57373"
                android:textStyle="normal|bold"
                android:padding="5dp"
                android:fontFamily="sans-serif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"/>

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>