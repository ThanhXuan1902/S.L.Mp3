<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:padding="5dp"
    app:layout_constraintCircleRadius="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#463C36">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="3dp"
        android:id="@+id/cradview_imgview_hinhbaihat">
        <ImageView
            android:id="@+id/imgView_hinhbaihat"
            android:background="@color/teal_700"
            android:scaleType="fitXY"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/txt_ten_baihat"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:text="Phố Cũ Còn Anh"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="18dp"

        android:textStyle="bold"
        android:textColor="@color/white"
        android:singleLine="true"
        android:layout_toRightOf="@id/cradview_imgview_hinhbaihat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txt_ten_casi_baihat"
        android:textSize="15sp"
        android:fontFamily="sans-serif"
        android:maxLines="1"
        android:text="Thanh Xuân"
        android:textColor="@color/white"
        android:layout_marginTop="5sp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/cradview_imgview_hinhbaihat"
        android:layout_below="@id/txt_ten_baihat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <ImageView
        android:id="@+id/imgView_LuotThich"
        android:backgroundTint="@color/white"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/iconlove"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="30dp"
        android:layout_height="30dp"/>

</RelativeLayout>