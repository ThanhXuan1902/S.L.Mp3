<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:weightSum="10"
    android:orientation="vertical"
    android:background="#E0F7FA"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:backgroundTint="#E57373"
    android:layout_height="match_parent"
    tools:context=".Activity.PlayNhacActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_play_nhac"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

    </androidx.appcompat.widget.Toolbar>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager_play_nhac"
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </androidx.viewpager.widget.ViewPager>

    <LinearLayout
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:weightSum="10"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_thoigian_batdau"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="00:00"
                android:textSize="16sp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <SeekBar
                android:id="@+id/seekbarsong"
                android:layout_weight="9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_thoigian_ketthuc"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="00:00"
                android:textSize="16sp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:weightSum="5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/img_button_iconsuffle"
                android:layout_weight="1"
                android:src="@drawable/iconsuffle"
                android:scaleType="fitXY"
                android:background="@null"
                android:layout_width="30dp"
                android:layout_height="50dp"/>
            <ImageButton
                android:id="@+id/img_button_iconpreview"
                android:src="@drawable/iconpreview"
                android:scaleType="fitXY"
                android:background="@null"
                android:layout_width="70dp"
                android:layout_height="70dp"/>

            <ImageButton
                android:id="@+id/img_button_iconplay"
                android:src="@drawable/iconplay"
                android:scaleType="fitXY"
                android:background="@null"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
            <ImageButton
                android:id="@+id/img_button_iconnext"
                android:src="@drawable/iconnext"
                android:scaleType="fitXY"
                android:background="@null"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
            <ImageButton
                android:id="@+id/img_button_iconrepeat"
                android:src="@drawable/iconrepeat"
                android:scaleType="fitXY"
                android:background="@null"
                android:layout_width="60dp"
                android:layout_height="60dp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>